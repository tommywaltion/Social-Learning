<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".FlagFragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/testButton"
        android:text="Flag Fragment"
        android:textSize="25sp"
        android:layout_centerInParent="true"
        android:padding="20dp"
        android:background="@drawable/layout_bg_round_edge"
        android:visibility="gone"/>

    <EditText
        android:id="@+id/exam_List_Search_Bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="50dp"
        android:background="@drawable/layout_bg_round_black_edge"
        android:textSize="30sp" />

    <ImageView
        android:id="@+id/exam_List_Search_Bar_Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/layout_bg_round_black_edge"
        android:padding="5dp"
        android:src="@drawable/ic_baseline_search_24" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="75dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/layout_bg_round_edge">

                <RelativeLayout
                    android:id="@+id/exam_list_template_exam_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/exam_list_template_image_logo"
                        android:layout_width="85dp"
                        android:layout_height="85dp"
                        android:layout_marginStart="25dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:src="@drawable/logo_img" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="25dp"
                        android:layout_toEndOf="@id/exam_list_template_image_logo">

                        <TextView
                            android:id="@+id/exam_list_template_title"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Nama Soal"
                            android:textSize="25sp"
                            android:textColor="@color/black"
                            app:autoSizeTextType="uniform"
                            app:autoSizeMaxTextSize="25sp"
                            app:autoSizeMinTextSize="12sp"/>

                        <TextView
                            android:id="@+id/exam_list_template_quantity"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="40 Soal"
                            android:textSize="20sp"
                            android:textColor="@color/black"
                            android:layout_below="@id/exam_list_template_title"/>

                    </RelativeLayout>

                </RelativeLayout>


                <RelativeLayout
                    android:layout_below="@id/exam_list_template_exam_info"
                    android:id="@+id/exam_list_template_author"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/exam_list_template_author_profile_picture"
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="25dp"
                        android:src="@drawable/pfp_1" />

                    <TextView
                        android:id="@+id/exam_list_template_author_profile_username"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Username author"
                        android:textAlignment="viewEnd"
                        android:layout_toStartOf="@id/exam_list_template_author_profile_picture"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        android:layout_marginStart="25dp"
                        android:layout_marginEnd="5dp"
                        app:autoSizeTextType="uniform"
                        app:autoSizeMaxTextSize="20sp"
                        app:autoSizeMinTextSize="12sp"/>

                    <TextView
                        android:id="@+id/exam_list_template_timestamp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="1 Month"
                        android:layout_below="@id/exam_list_template_author_profile_username"
                        android:layout_marginStart="25dp"
                        android:layout_marginEnd="5dp"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:layout_toStartOf="@id/exam_list_template_author_profile_picture"
                        android:textAlignment="viewEnd"/>

                    <TextView
                        android:id="@+id/exam_list_template_topic"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toStartOf="@id/exam_list_template_graduation"
                        android:layout_below="@id/exam_list_template_timestamp"
                        android:layout_marginEnd="2dp"
                        android:background="@drawable/layout_bg_round_edge_blue"
                        android:text="12 IPA 3"
                        android:textSize="12sp"
                        android:textColor="@color/white"
                        android:padding="5dp"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/exam_list_template_graduation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toStartOf="@id/exam_list_template_author_profile_picture"
                        android:layout_below="@id/exam_list_template_timestamp"
                        android:layout_marginStart="2dp"
                        android:layout_marginEnd="5dp"
                        android:background="@drawable/layout_bg_round_edge_orange"
                        android:text="Angkatan 2012"
                        android:textSize="12sp"
                        android:textColor="@color/white"
                        android:padding="5dp"
                        android:textStyle="bold"/>

                </RelativeLayout>

                <TextView
                    android:id="@+id/exam_list_template_join"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/exam_list_template_author"
                    android:layout_marginStart="25dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="25dp"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/layout_bg_round_edge_green"
                    android:text="JOIN"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:textStyle="bold" />

<!--                <RelativeLayout-->
<!--                    android:id="@+id/exam_list_template_comment_section"-->
<!--                    android:layout_width="match_parent"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:layout_below="@id/exam_list_template_author"-->
<!--                    android:layout_alignParentBottom="true">-->


<!--                </RelativeLayout>-->


            </RelativeLayout>

        </LinearLayout>

    </ScrollView>

    <ImageView
        android:id="@+id/exam_create_button"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/layout_bg_round_black_edge"
        android:elevation="2dp"
        android:padding="2dp"
        android:src="@drawable/ic_baseline_add_24"
        android:textSize="50sp"
        app:tint="@color/black"
        tools:ignore="ContentDescription" />
</RelativeLayout>