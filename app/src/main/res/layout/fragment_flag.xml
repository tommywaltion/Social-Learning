<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".FlagFragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/testButton"
        android:text="Flag Fragment"
        android:textSize="25sp"
        android:layout_centerInParent="true"
        android:padding="20dp"
        android:background="@drawable/layout_bg_round_edge"
        android:visibility="gone"/>

    <EditText
        android:id="@+id/exam_List_Search_Bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="50dp"
        android:background="@drawable/layout_bg_round_black_edge"
        android:textSize="30sp" />

    <ImageView
        android:id="@+id/exam_List_Search_Bar_Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/layout_bg_round_black_edge"
        android:padding="5dp"
        android:src="@drawable/ic_baseline_search_24" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="75dp">

        <LinearLayout
            android:id="@+id/exam_list_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        </LinearLayout>

    </ScrollView>

    <ImageView
        android:id="@+id/exam_create_button"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/layout_bg_round_black_edge"
        android:elevation="2dp"
        android:padding="2dp"
        android:src="@drawable/ic_baseline_add_24"
        android:textSize="50sp"
        app:tint="@color/black"
        tools:ignore="ContentDescription" />
</RelativeLayout>